<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_result_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundResultItem"
    android:orientation="vertical"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPadding="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingRight="20dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:background="@color/colorBackgroundResultItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundGrayLight"
            android:backgroundTint="@color/colorBackgroundGrayLight"
            android:textAppearance="@style/MC.Theme.Item.Question" />

        <TextView
            android:id="@+id/txtAnswer"
            android:layout_below="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="4dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MC.Theme.Item.Answer" />

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/txtAnswer"
            android:layout_marginTop="7dp"
            android:layout_height="1dp"
            android:background="@color/colorBackgroundGray" />
    </RelativeLayout>

</android.support.v7.widget.CardView>